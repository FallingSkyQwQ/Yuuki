<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Yuuki.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Yuuki.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <ScrollViewer>
            <StackPanel Spacing="16">
                <TextBlock
                    Text="设置"
                    Style="{StaticResource TitleTextBlockStyle}"/>

                <!-- Appearance Settings -->
                <StackPanel Spacing="8">
                    <TextBlock
                        Text="外观"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Spacing="12">
                        <!-- Theme Selector -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="主题" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <ComboBox
                                x:Name="ThemeComboBox"
                                HorizontalAlignment="Left"
                                MinWidth="200"
                                SelectedIndex="0"
                                SelectionChanged="ThemeComboBox_SelectionChanged">
                                <ComboBoxItem Content="浅色"/>
                                <ComboBoxItem Content="深色"/>
                                <ComboBoxItem Content="跟随系统"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Game Settings -->
                <StackPanel Spacing="8" Margin="0,16,0,0">
                    <TextBlock
                        Text="游戏设置"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Spacing="12">
                        <!-- Java Path -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Java 路径" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" PlaceholderText="java" Text="java"/>
                                <Button Grid.Column="1" Content="浏览"/>
                            </Grid>
                        </StackPanel>

                        <!-- Memory Settings -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="默认最大内存 (MB)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <NumberBox
                                Value="2048"
                                Minimum="512"
                                Maximum="16384"
                                SpinButtonPlacementMode="Inline"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
